# Application Settings
APP_NAME="Ticket IQ System"
APP_ENV=local
APP_KEY=  # Will be generated during setup
APP_DEBUG=true
APP_URL=http://localhost

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=./database/database.sqlite

# Cache and Session Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue Configuration (Required for background processing)
QUEUE_CONNECTION=database  # Changed from sync to use database queue
QUEUE_DRIVER=database     # Ensures jobs are processed in the background

# OpenAI Integration Settings
OPENAI_API_KEY=your_openai_api_key_here          # Required: Your OpenAI API key
OPENAI_ORGANIZATION=your_openai_org_id_here      # Optional: Your OpenAI organization ID
OPENAI_CLASSIFY_ENABLED=true                     # Enable/disable AI classification
OPENAI_RATE_LIMIT=60                            # API rate limit (requests per minute)
OPENAI_MODEL=gpt-3.5-turbo                      # Model to use for classification

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Optional Services (uncomment and configure as needed)
# REDIS Configuration
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
# MAIL_MAILER=smtp
# MAIL_HOST=mailhog
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null
# MAIL_FROM_ADDRESS=null
# MAIL_FROM_NAME="${APP_NAME}"
